module i_PSGShaper(
input [19:0] o,		// shaped input
input [7:0] env,	// envelop generator input
input clk_i,		// clock
input [11:0] tgi,	// tone generator input
input ce			// clock enable
);

assert property(@(posedge clk_i) (ce) |-> (o == tgi * env));
assert property(@(posedge clk_i) (!ce) |-> (o == $past(o)));
assert property(@(posedge clk_i) (o == 0) |-> (tgi == 0 || env == 0));
assert property(@(posedge clk_i) (tgi == 0 || env == 0) |-> (o == 0));
assert property(@(posedge clk_i) (tgi != 0 && env != 0) |-> (o != 0));
endmodule