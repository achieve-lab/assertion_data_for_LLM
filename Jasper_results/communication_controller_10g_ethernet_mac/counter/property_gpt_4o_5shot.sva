 parameter WIDTH = 8;
module i_counter(
    input en,
    input clk,
    input reset,
    input [WIDTH-1:0] value,
    input load
);

assert property(@(posedge clk) (reset) |-> (value == 0));
assert property(@(posedge clk) (load) |-> (value == 0));
assert property(@(posedge clk) (en && !reset && !load) |=> (value == $past(value) + 1));
assert property(@(posedge clk) (!en && !reset && !load) |=> (value == $past(value)));
assert property(@(posedge clk) (reset && load) |-> (value == 0));
assert property(@(posedge clk) (reset && en) |-> (value == 0));
assert property(@(posedge clk) (load && en) |-> (value == 0));
assert property(@(posedge clk) (reset && !load && !en) |-> (value == 0));
assert property(@(posedge clk) (load && !reset && !en) |-> (value == 0));
endmodule