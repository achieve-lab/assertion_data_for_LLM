module i_rxDAchecker(
   input [47:0] MAC_Addr,
   input [47:0] da_addr,
   input local_invalid,
   input  rxclk,
   input  reset,
   input broad_valid,
   input local_valid,
   input multi_valid
);

assert property(@(posedge rxclk) ((MAC_Addr == 0)) |-> reset);
assert property(@(posedge rxclk) ((da_addr == 0)) |-> reset);
endmodule