property a1;
@(posedge clk) (prescaler[2] == 1) ##1 (prescaler[2] == 1 & prescaler[0] == 0 & prescaler[1] == 0) |-> (mmc_clk == 0);
endproperty
assert_a1: assert property(a1);

property a2;
@(posedge clk) (prescaler[1] == 1) ##1 (prescaler[2] == 1 & prescaler[1] == 1 & prescaler[0] == 0) |-> (mmc_clk == 0);
endproperty
assert_a2: assert property(a2);

property a3;
@(posedge clk) (mode_transfer == 0 & prescaler[2] == 0) |-> (mmc_clk == 1);
endproperty
assert_a3: assert property(a3);

property a4;
@(posedge clk) (prescaler[2] == 0) ##1 (mode_transfer == 0) |-> (mmc_clk == 1);
endproperty
assert_a4: assert property(a4);

property a0;
@(posedge clk) (mode_transfer == 1) |-> (mmc_clk == 0);
endproperty
assert_a0: assert property(a0);

