   parameter DATA_WIDTH = 32;
   parameter ADDR_WIDTH = 14;
module i_dual_port_ram(
   input clk, 
   input r_ena,
   input [DATA_WIDTH-1:0] w_data, 
   input w_ena, 
input [DATA_WIDTH-1:0] mem[0:2**ADDR_WIDTH-1],
   input  [DATA_WIDTH-1:0] r_data ,
   input [ADDR_WIDTH-1:0] r_addr,
   input [ADDR_WIDTH-1:0] w_addr 
);

assert property(@(posedge clk)  (w_ena && r_ena) |-> (w_addr != r_addr));assert property(@(posedge clk)  (w_ena) |-> (mem[w_addr] == w_data));assert property(@(posedge clk)  (r_ena) |-> (r_data == mem[r_addr]));assert property(@(posedge clk)  (!w_ena && !r_ena) |-> (r_data == r_data));assert property(@(posedge clk)  // No change in r_data if neither read nor write is enabled
 (w_ena && !r_ena) |-> (r_data == r_data));assert property(@(posedge clk)  // No change in r_data if only write is enabled
 (!w_ena && r_ena) |-> (r_data == mem[r_addr]));assert property(@(posedge clk)  // r_data should reflect the memory content at r_addr if only read is enabled);
endmodule