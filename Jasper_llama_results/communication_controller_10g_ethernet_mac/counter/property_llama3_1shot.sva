 parameter WIDTH = 8;
module i_counter(
    input en,
    input clk,
    input reset,
    input [WIDTH-1:0] value,
    input load
);

assert property(@(posedge clk) (reset) |-> (value == 0));
assert property(@(posedge clk) (en) |-> (load == 0));
assert property(@(posedge clk)              (load) |-> (value == 0));
assert property(@(posedge clk) (reset) |-> (load == 0));
assert property(@(posedge clk) (en) |-> (value == value + 1));
assert property(@(posedge clk) (load) |-> (value == 0));
assert property(@(posedge clk) (reset) |-> (en == 0));

endmodule