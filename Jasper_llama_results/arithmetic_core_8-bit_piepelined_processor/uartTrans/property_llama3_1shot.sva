`include "defines.v"
module i_uartTrans(
		// input bit-stream
		input [1:0] stateReg, stateNext,	// current and next states
		input [2:0] nReg, nNext,		// counter
		input tx, txDoneTick,
		input		 txReg, txNext,	// current bit being transferred
		input [3:0] sReg, sNext,		//	counter
		input clk, reset, sTick, txStart,
		input [7:0] bReg, bNext,		// perhaps keeps data to be sent
		input [`dataBits-1 :0] din
);

assert property(@(posedge clk) (stateReg == idle & txStart) |-> (txNext == 1));
assert property(@(posedge clk) (sTick & sReg == 15 & stateReg == data & nReg == (dataBits-1)) |-> (stateNext == stop));
assert property(@(posedge clk) (sTick & sReg == 15 & stateReg == data & nReg!= (dataBits-1)) |-> (nNext == nReg + 1));
assert property(@(posedge clk) (sTick & sReg == 15 & stateReg == start) |-> (stateNext == data));
assert property(@(posedge clk) (stateReg == stop) |-> (txNext == 1));
assert property(@(posedge clk) (stateReg == idle & txStart) |-> (stateNext == start));
assert property(@(posedge clk)              (txStart) |-> (txDoneTick == 1));
assert property(@(posedge clk) (stateReg == idle) |-> (txNext == 1));
assert property(@(posedge clk) (stateReg == idle & txStart) |-> (sNext == 0));
assert property(@(posedge clk) (sTick & sReg == 15 & stateReg == data) |-> (sNext == 0));
assert property(@(posedge clk) (txStart) |-> (stateReg == start));
assert property(@(posedge clk) (stateReg == idle & txStart) |-> (nNext == 0));
assert property(@(posedge clk) (stateReg == idle & txStart) |-> (txDoneTick == 1));
assert property(@(posedge clk) (sTick & sReg == 15) |-> (sNext == 1));
assert property(@(posedge clk) (stateReg == idle & txStart) |-> (bNext == din));
assert property(@(posedge clk) (sTick & sReg!= 15) |-> (sNext == sReg + 1));
assert property(@(posedge clk) (stateReg == data) |-> (txNext == bReg[0]));
assert property(@(posedge clk) (sTick & sReg == 15 & stateReg == stop) |-> (stateNext == idle));
assert property(@(posedge clk) (stateReg == start) |-> (txNext == 0));

endmodule