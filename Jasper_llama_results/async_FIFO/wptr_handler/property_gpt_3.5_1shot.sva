module i_wptr_handler #(parameter PTR_WIDTH=3)(
  input [PTR_WIDTH:0] b_wptr, g_wptr,
  input wrap_around,
  input [PTR_WIDTH:0] b_wptr_next,
  input wclk, wrst_n, w_en,
  input [PTR_WIDTH:0] g_rptr_sync,
  input wfull,
  input [PTR_WIDTH:0] g_wptr_next,
  input full
);

assert property(@(posedge wclk) (g_wptr_next == {~g_rptr_sync[PTR_WIDTH:PTR_WIDTH-1], g_rptr_sync[PTR_WIDTH-2:0]}) |-> (wfull == 1));assert property(@(posedge wclk) (wfull == 0) |-> (g_wptr_next != {~g_rptr_sync[PTR_WIDTH:PTR_WIDTH-1], g_rptr_sync[PTR_WIDTH-2:0]}));assert property(@(posedge wclk) (wfull == 1) |-> (g_wptr_next == {~g_rptr_sync[PTR_WIDTH:PTR_WIDTH-1], g_rptr_sync[PTR_WIDTH-2:0]}));assert property(@(posedge wclk) (wfull == 0) |-> (g_wptr_next != {~g_rptr_sync[PTR_WIDTH:PTR_WIDTH-1], g_rptr_sync[PTR_WIDTH-2:0]}));assert property(@(posedge wclk)  (full) |-> (wfull));assert property(@(posedge wclk)  (b_wptr_next) |-> (b_wptr));assert property(@(posedge wclk)  (g_wptr_next) |-> (g_wptr));
endmodule