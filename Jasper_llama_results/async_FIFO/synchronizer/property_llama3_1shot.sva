module i_synchronizer#(parameter WIDTH=3)(
	input clk, input rst_n, input [WIDTH:0] d_in,
  input [WIDTH:0] q1,
       	input  [WIDTH:0] d_out
);

assert property(@(posedge clk)  (q1 == d_in) |-> (d_out == q1));
assert property(@(posedge clk)              (q1 == 0) |-> (d_out == 0));
assert property(@(posedge clk)  (d_in == 0) |-> (d_out == 0));
assert property(@(posedge clk)  (d_out == d_out) |-> (d_out == d_out));
assert property(@(posedge clk)  (d_in == d_in) |-> (d_out == d_in));
assert property(@(posedge clk)  (d_in == d_in) |-> (q1 == d_in));
assert property(@(posedge clk)  (d_in == d_in) |-> (d_out == q1));
assert property(@(posedge clk)  (d_in == 0) |-> (q1 == 0));

endmodule