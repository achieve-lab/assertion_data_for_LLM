parameter N = 8;
module i_fht_bfly(
input			clk,
	input [N-1:0] co,sum,
input	[N-1:0]	b, // input
input [N-1:0] b_FF,
  	input [N:0] plus1,
	input  ci,
input			valid,
  	input [N-1:0] ainv,
input	[N  :0]	d, // subtractive input
input	[N  :0]	c, // additive input
input [N-1:0] a_FF,
input			rstn,
	input [N-1:0] a
);

assert property(@(posedge clk)  (d == 0) |-> (a_FF == 0 && b_FF == 0));
assert property(@(posedge clk)  (a_FF == 0) |-> (c == 0));
assert property(@(posedge clk)  (b_FF == 0) |-> (c == 0));
assert property(@(posedge clk)  (c == 1) |-> (a_FF == 1 || b_FF == 1));
assert property(@(posedge clk)  (b_FF == 0) |-> (d == 1));
assert property(@(posedge clk)  (c == 0) |-> (a_FF == 0 && b_FF == 0));
assert property(@(posedge clk)  (a_FF == 1) |-> (d == 0));
assert property(@(posedge clk)  (b_FF == 1) |-> (d == 0));
assert property(@(posedge clk)  (b_FF == 1) |-> (c == 1));
assert property(@(posedge clk)  (d == 1) |-> (a_FF == 1 || b_FF == 1));
assert property(@(posedge clk)  (a_FF == 0) |-> (d == 1));
assert property(@(posedge clk)  (a_FF == 1) |-> (c == 1));

endmodule