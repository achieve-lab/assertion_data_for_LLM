module i_PSGMasterVolumeControl(
input [15:0] i,
input rst_i,
input [3:0] volume,
input clk_i,
input [19:0] o,
input [19:0] v2 ,
input [19:0] v1 ,
input [19:0] vo ,
input [19:0] v3 
);

assert property(@(posedge clk_i) (volume[0] && i != o[0]) |-> (o[0] == 0));assert property(@(posedge clk_i)  (volume[1] && (i + 1'b0) != o[1]) |-> (o[1] == 0));assert property(@(posedge clk_i)  (volume[2] && (i + 2'b0) != o[2]) |-> (o[2] == 0));assert property(@(posedge clk_i)  (volume[3] && (i + 3'b0) != o[3]) |-> (o[3] == 0));
endmodule