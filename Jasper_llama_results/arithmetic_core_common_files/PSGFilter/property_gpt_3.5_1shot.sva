assert property(@(posedge clk) (assert property1 @(posedge clk) disable iff (rst) (wr && (adr == cnt[3:0]) |-> (coeff[adr] == din[11:0] && sgn[adr] == din[12])));assert property(@(posedge clk)  assert property2 @(posedge clk) disable iff (rst) (cnt == 8'd0 && tap[0] == i && $past(tap[pTaps-1]) == tap[pTaps-2]));assert property(@(posedge clk)  assert property3 @(posedge clk) disable iff (rst) (cnt == 8'd0 |-> (acc == 0)));assert property(@(posedge clk)  assert property4 @(posedge clk) disable iff (rst) (cnt == 8'd0 |-> (o == acc[30:16])));assert property(@(posedge clk) ));
endmodule